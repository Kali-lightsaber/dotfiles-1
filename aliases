alias startx='startx &> ~/.xlog'

# Custom aliases

alias t='tig'
alias ts='tig status'
alias h='history'
alias m='man'
alias o='xdg-open'
alias s='source'
alias toJson='python -mjson.tool'

# Custom functions

function f() {
    find . -iname "*$1*" 2>/dev/null 
}

function p() {
    ps -ef | sed -e '1p' -e "/$1/!d"
}

function sleep_now() {
    slock &
    xset dpms force suspend
}
