bind status D !@?rm %(file)
bind branch D !@?git branch -D %(branch)
bind generic 9 !@sh -c "printf %(commit) | pbcopy && echo Copied commit ID %(commit) to clipboard!"
bind main J !sh -c "git stash && git rebase -i %(commit)^ && git stash pop"
bind main K !sh -c "git stash && git rebase -i %(commit)^"

bind generic <Ctrl-d> scroll-page-down
bind generic <Ctrl-u> scroll-page-up

bind stash A !?git stash apply %(stash)
bind stash D !?git stash drop %(stash)

bind status S !?git stash save --keep-index %(prompt)

bind status <Ctrl-g> !echo %(directory)%(file)

# Colors 
color cursor yellow red bold
color date yellow black normal
color graph-commit magenta black normal
color main-ref magenta black normal
